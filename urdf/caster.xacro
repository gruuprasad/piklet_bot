<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="caster_wheel" params="name parent xyz">
    <link name="${name}">
      <visual>
        <geometry><sphere radius="0.025"/></geometry>
        <material name="darkgray"/>
      </visual>
    </link>
    <joint name="${name}_joint" type="fixed">
      <origin xyz="${xyz}"/>
      <parent link="${parent}"/>
      <child link="${name}"/>
    </joint>
  </xacro:macro>

</robot>
