<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="simple_arm" params="parent">

    <!-- Arm base -->
    <link name="arm_base">
      <inertial>
        <mass value="0.3"/>
        <inertia ixx="0.0005" iyy="0.0005" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder radius="0.03" length="0.05"/>
        </geometry>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.03" length="0.05"/>
        </geometry>
        <origin xyz="0 0 0.025" rpy="0 0 0"/>
      </collision>
    </link>

    <joint name="arm_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="arm_base"/>
      <origin xyz="0.0 0.13 0.0" rpy="0 0 0"/>
    </joint>

    <!-- Link 1 -->
    <link name="arm_link1">
      <inertial>
        <mass value="0.4"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <visual>
        <geometry><cylinder radius="0.025" length="0.12"/></geometry>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
        <material name="green"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.025" length="0.12"/></geometry>
        <origin xyz="0 0 0.06" rpy="0 0 0"/>
      </collision>
    </link>

    <joint name="shoulder_joint" type="revolute">
      <parent link="arm_base"/>
      <child link="arm_link1"/>
      <origin xyz="0 0 0.025"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
    </joint>

    <!-- Link 2 -->
    <link name="arm_link2">
      <inertial>
        <mass value="0.25"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <visual>
        <geometry><cylinder radius="0.02" length="0.12"/></geometry>
        <origin xyz="0 0 0.06"/>
        <material name="yellow"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.02" length="0.12"/></geometry>
        <origin xyz="0 0 0.06"/>
      </collision>
    </link>

    <joint name="elbow_joint" type="revolute">
      <parent link="arm_link1"/>
      <child link="arm_link2"/>
      <origin xyz="0 0 0.12"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
    </joint>

    <!-- Link 3 (wrist / end link) -->
    <link name="arm_link3">
      <inertial>
        <mass value="0.15"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
      </inertial>
      <visual>
        <geometry><cylinder radius="0.015" length="0.08"/></geometry>
        <origin xyz="0 0 0.04"/>
        <material name="red"/>
      </visual>
      <collision>
        <geometry><cylinder radius="0.015" length="0.08"/></geometry>
        <origin xyz="0 0 0.04"/>
      </collision>
    </link>

    <joint name="wrist_joint" type="revolute">
      <parent link="arm_link2"/>
      <child link="arm_link3"/>
      <origin xyz="0 0 0.12"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
    </joint>

  </xacro:macro>
</robot>
